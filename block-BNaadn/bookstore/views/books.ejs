<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <h1>Book Store</h1>
      </header>
      <main>
        <section>
          <div>
            <div>Sort by:</div>
            <a href="/books">Book Names</a >
            <a href="/books/sortbyauthor">Author Name</a >
            <a href="/books/sortbycategory">Category </a >
          </div>
        </section>
        <section>
          <%books.forEach(ele=>{%>
            <article>
              <div>
                <img
                  src="<%=ele.cover_image_url%>"
                  alt="cover image"
                />
              </div>
              <div>
                <h4><%=ele.title%></h4>
                <h6><%=ele.category%></h6>
                <h5><span>By: </span><%=ele.authorId.name%></h5>
              </div>
            </article>
          <%})%>
        </section>
      </main>
</body>
</html>